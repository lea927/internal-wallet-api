<h1>Sign In</h1>

<%= form_with(url: new_session_path, local: true) do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign In" %>
  </div>
<% end %>

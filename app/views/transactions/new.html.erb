<h1>Send Money</h1>

<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_for @transaction do |f| %>
  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount, required: true, min: 0.01, max: 10000, step: 0.01 %>
  </div>
  <div>
    <%= f.label :account_number %>
    <%= f.number_field :target_account_number %>
  </div>

  <div>
    <%= f.submit 'Send Money' %>
  </div>
<% end %>

